<body>

    <div class="container">
        <h1>Vote for Your Favorite Candidate</h1>
        
        <!-- Voting Form -->
        <form id="votingForm">
            <label>
                <input type="radio" name="candidate" value="Candidate A"> Candidate A
            </label><br>

            <label>
                <input type="radio" name="candidate" value="Candidate B"> Candidate B
            </label><br>

            <label>
                <input type="radio" name="candidate" value="Candidate C"> Candidate C
            </label><br>

            <button type="submit">Vote</button>
        </form>

        <!-- Voting Result -->
        <div class="result" id="result" style="display: none;">
            <p>You voted for: <span id="votedCandidate"></span></p>
            <p>Thank you for your vote!</p>
        </div>
    </div>

    <script>
        // Handle form submission
        document.getElementById("votingForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent form submission to a server
            
            // Get selected candidate
            let selectedCandidate = document.querySelector('input[name="candidate"]:checked');
            
            if (selectedCandidate) {
                // Display result
                document.getElementById("votedCandidate").textContent = selectedCandidate.value;
                document.getElementById("result").style.display = "block";

                // Disable further voting
                document.querySelector('button').disabled = true;
                document.querySelectorAll('input[type="radio"]').forEach(input => {
                    input.disabled = true;
                });
            } else {
                alert("Please select a candidate to vote for.");
            }
        });
    </script>

</body>
</html>
